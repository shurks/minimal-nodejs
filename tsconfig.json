{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "types": [
            "node"
        ],
        "module": "commonjs",
        "target": "ES2020",
        "lib": [
            "ES2020"
        ],
        "sourceMap": true,
        "rootDir": "./src",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "isolatedModules": false,
        "experimentalDecorators": true,
        "typeRoots": [
            "./node_modules/@types",
            "src/library/engine/env/env.d.ts"
        ],
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "declarationMap": true,
        "preserveSymlinks": true
    },
    "include": [
        "./src/**/*.ts",
        "./src/**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}